.search-view{
  position:fixed;
  left:0;
  right:0;
  top:0;
  z-index:5;
  width: 100%;
  height: 100rpx;
  background: rgb(192, 197, 197);
  display: flex;
  flex-direction: column;
  opacity: 0.8;
}
.search-content{
   background: white;
   width:650rpx;
   display: flex;
   flex-direction: row;
   align-items: center;
   padding-top: auto;
   padding-left: 20rpx;
   padding-bottom: auto;
   margin: auto;
   height: 70rpx;
   border-radius:5px 5px;
}
.search-icon{
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}
